@model List<Product>
<div class="container">
	<div class="row pt-4">
		<div class="col-6">
			<div class="text-primary fs-2 fw-bold text-black">Product List</div>
		</div>
		<div class="col-6 text-end">
			<a asp-controller="Product" asp-action="Create" class="btn btn-primary m-2">
				Create Product
				<i class="bi bi-file-earmark-plus"></i>
			</a>
		</div>
	</div>

</div>
<table class="table table-bordered table-striped">
	<thead>
		<tr> 
			<th>Title</th>
			<th>ISBN</th>
			<th>Price</th>
			<th>Author</th>
			<th>Category</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var pro in Model)
		{
			<tr>
				<td>@pro.Title</td>
				<td>@pro.ISBN</td>
				<td>@pro.ListPrice</td>
				<td>@pro.Author</td>
				<td></td>
				@* <th>@pro.Category</th> *@
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-controller="Product" asp-action="Edit" asp-route-id="@pro.Id" class="btn btn-primary mx-2">
							<i class="bi bi-pencil-square"></i> Edit
						</a>
						<a asp-controller="Product" asp-action="Delete" asp-route-id="@pro.Id" class="btn btn-danger mx-2">
							<i class="bi bi-trash-fill"></i> Delete
						</a>
					</div>
				</td>
				
			</tr>
		}
	</tbody>
</table>
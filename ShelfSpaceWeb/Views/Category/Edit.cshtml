@model Category

<form method="post">
	<input asp-for="Id" hidden />
	<div class="border p-3 mt-4 border-radius rounded">
		<div class="row pb-2">
			<h2 class="text-primary">
				Edit Category
			</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" type="text" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="DisplayOrder"></label>
			<input asp-for="DisplayOrder" type="text" class="form-control" />
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-primary" style="width: 150px">Done</button>
		<a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Go back</a>

	</div>
</form>